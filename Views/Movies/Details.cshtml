@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Detalhes do Filme";
}

<h1>Detalhes</h1>

<div>
    <h4>Filme</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Data de Lançamento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            Gênero
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            Preço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price) M
        </dd>
        <dt class = "col-sm-2">
            Avaliação
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-sm btn-info">Voltar a Lista</a>
</div>
